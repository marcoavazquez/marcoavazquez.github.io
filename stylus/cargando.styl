.ideatics-load
      -web-kit-animation rodar 1s infinite
      background orange
      border-radius 50%
      color white
      height 200px
      position relative
      width 200px

.ideatics-load
    &:before
        border 4em solid transparent
        border-bottom 2em solid orange
        border-right 2em solid orange
        content ''
        height 0
        transform rotate(0deg)
        position absolute
        width 0

        bottom 0em
        left 50%


.foco-load
    -web-kit-animation rodar 3s infinite
    background white
    border-radius 50%
    height 40%
    margin 0px auto
    position relative
    top 20%
    width 40%

.foco-load
    &:after
        border 1em solid transparent
        border-radius 0% 100%
        content ''
        box-shadow 4px -4px 2px orange
        height 0em
        position absolute
        width 0em

        top 13%
        left 46%

.foco-load
    &:before
        border 1em solid transparent
        border-top 2em solid white
        content ''
        position absolute
        height 0em
        width 1em
        bottom -2em
        left 1em

.socket-load
    border-radius 30%
    background white
    width 1em
    height 0.3em
    position absolute
    bottom 24%
    left 46%

.socket-load
    &:before
        border-radius 30%
        background white
        content ''
        width 100%
        height 0.3em
        position absolute
        bottom 0.45em


.socket-load
    &:after
        border-radius 30%
        background white
        content ''
        width 80%
        height 0.3em
        position absolute
        bottom -0.35em
        left 0.1em

@-web-kit-keyframes rodar
    from
        transform rotate(0deg)

    to
        transform rotate(360deg)

