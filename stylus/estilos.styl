@import "nib"
@import "normalize.styl"
@import "cargando.styl"

boton = #2c8484
cafe_hover = #946f51
boton_cafe = #dd8c49
negro = #333
blanco = #FAFAFA
naranja_head = #dd8c49
naranja_id = #f6921e
verde_fondo_oscuro = #084747
verder_fondo_claro = #9bd5d5
cafe = #773d0d
link_verde = #31595f
link_cafe = #946f51

h1,h2
	font-weight normal

body
	background-image url('http://wallpapers.wallhaven.cc/wallpapers/full/wallhaven-167883.jpg')
	background-attachment: fixed;
	background-size cover
	font-family 'Raleway', 'sans serif'
	line-height 2em
	letter-spacing 0.05em

a
	text-decoration none

header
	background-color rgba(0,0,0,.9)
	color white
	position relative
	text-align center
	height 100%
	padding-bottom 2em

.social
	margin 0 auto
	padding 0
	padding-top 1em
	position relative
	z-indez 10
	width 90%
	li
		list-style none
		box-sizing border-box
		float left
		width 20%
		img
			border-radius 50%
			box-shadow 1px 1px 2px gray
			margin 0px auto
			width 3em
			&:hover
				box-shadow 1px 1px 2px white

		a
			display block
			width 100%
			height 100%


//menu
.menu
	width 100%
	margin 0
	padding 0
	li
		border-radius 50%;
		height 3em
		list-style none
		float left
		width 50%
		a
			background-color orange
			border-radius 50%
			display block
			color white
			margin 0px auto
			padding 2em 0em
			width 6em
			&:hover
				font-weight bold
				background-color naranja_id


///######### Foto mia #################//
.marco
	margin 0 auto

	img
		margin-top 2em
		border-radius 50%
		width 16em

.mensaje
	p
		font-size 1.2em
		padding 2em

.boton-contactar
	background-color boton
	border-radius 3px
	border 1px solid verde_fondo_oscuro
	display block
	font-size 1.4em
	padding 1em
	margin 0px auto
	width 80%
	&:hover
		background-color verde_fondo_oscuro

.servicio1, .servicio2, .portfolio p, .aboutme p
	margin 0px auto
	max-width 70em

.servicios
	color negro
	background-color verder_fondo_claro
	font-size 1em
	padding 3em 1em
	article
		max-width 64em
		margin-bottom 2em
.herramientas
	margin 0px auto
	margin-bottom 10%
	img
		float right
		width 33%

p
	margin 0

/////////////////////portdolio /////////////
.portfolio
	color negro
	background-color rgba(250,250,250,.95)
	padding 1em
	padding-top 2em
	text-align center
	p
		padding 1em 0em

.cont-load
	margin 0px auto
	margin-top 2em
	margin-bottom 2em
	width 15em

////////////// mas ///////////////////
.contacto
	background-color verde_fondo_oscuro
	color blanco
	font-size 1.2em
	text-align center
	padding 1em
	padding-top 2em

.boton-cv
	background-color boton_cafe
	border-radius 3px
	display block
	font-size 1.2em
	margin 0px auto
	margin-top 2em
	margin-bottom 2em
	padding 1em
	text-align center
	width 80%
	&:hover
		background-color orange

/////////////////////yo///////////////////////
.aboutme
	background-color rgba(33,33,33,0.5)
	color white
	text-align center
	padding 3em 1em
	p
		max-width 64em
		padding 1em 0em

.marco-2
	margin 0
	padding 0
	img
		border-radius 50%
		width 10em
//////////footer///////////////
footer
	font-size 0.8em
	color white
	background-color cafe
	padding 2em
	p
		display inline-block
		&:nth-child(2)
			float right

@media screen and (min-width 960px)

	.boton-contactar
		font-size 1.4em
		width 15em

	.servicios
		padding-bottom 5em

	.social
		float right
		width 25%
		li
			img
				width 2em

	//menu
	.menu
		width 25%
		padding 1em

	///######### Foto mia #################//
	.marco
		img
			margin-top 2em
			border-radius 50%
			width 20%

	.boton-cv
		width 15em
