@import "normalize.styl"
azul = rgb(0, 72, 114)
gris = #F0F0FF
otro_cafe = rgb(20, 43, 75)
azul_marino = rgb(34, 35, 35)
letra = #333333

a
	color white
	text-decoration none

body
	background azul
	//background gris
	font-size 16px

header
	text-align center
	background url('../images/codigo_3.png') //3
	color white
	font-family 'Poiret one'
	height 23em

h1
	margin 0px
	padding 1em

h2
	font-size 1.2em
	margin 0px
	padding-left 2em

footer
	background azul_marino
	color gris
	text-align center
	font-size 0.7em

.logo
	border 8px outset azul
	border-radius 4em
	box-shadow 0.4em 0.4em 0.4em 0.4em black
	display inline-block
	overflow hidden
	img
		width 8em

.item
	display inline-block
	cursor pointer
	font-size 1.4em
	padding-top 0.4em
	text-align center
	width 48%
.item a
	color gris

.item a:hover
	color white

.social
	border-bottom 1px solid azul_marino
	list-style none
	text-align center

.item-social
	display inline-block

.ico-social
	margin 0.4em

.texto
	color gris
	//color letra
	font-family "ubuntu mono"
	line-height 140%
	margin 0px auto
	max-width 70em
	width 100%

.campo-form
	border 1px solid white
	font-family 'Caviar Dreams'
	height 3em
	text-align center
	width 100%
	&:nth-child(even)
		border-top 1px solid white

.mensaje
	border none
	border-top 1px solid gris
	font-family 'Caviar Dreams'
	width 99%

.btn-enviar
	background azul
	border solid 1px #6666FF
	color white
	font-size 1.3em
	height 2.5em
	width 100%

.block-cont
	display inline-block

.formulario
	display none

.contacto
	background otro_cafe
	color white
	font-family 'Share Tech Mono'
	font-size 1.6em
	height 10em
	padding-bottom 1em
	padding-top 0.2em
	text-align center

.contacto a
	color gris

.cel
	color gris

@media screen and (min-width:600px)

	h1
		font-size 2.5em
		padding 0.8em
	h2
		font-size 1.5em
	.logo
		margin-top 2.2em

@media screen and (min-width:1000px)
	header
		height 30em

	h1
		font-size 3em
		padding 1em

	h2
		font-size 2em


	.txt-desc
		top 1em
		width 50%

	.texto
		font-size 1.2em
		height 25em

	.logo
		img
			width 10em