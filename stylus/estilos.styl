@import "normalize.styl"
azul = rgb(0, 72, 114)
gris = #F9F9F9
cafe = rgb(73, 76, 66)
letra = #333333

a
	text-decoration none

body
	background gris
	font-size 16px

header
	background azul
	color white
	font-family 'Poiret One'
	height 8em

h1
	margin 0px
	padding-left 1em

h2
	font-size 1em
	margin 0px
	padding-left 2em

footer
	color azul
	text-align center
	font-size 0.7em
a
	color azul

.logo
	display none

.menu
	height 2.2em
	list-style none
	margin 0px
	padding 0px
	width 100%

.item
	display inline-block
	cursor pointer
	font-size 1.4em
	padding-top 0.4em
	text-align center
	width 48%
.item a
	color gris

.item a:hover
	color white

.social
	border-bottom 1px solid azul
	list-style none

.item-social
	display inline-block

.ico-social
	margin 0.4em

.texto
	color letra
	margin 0px auto
	max-width 80em
	width 100%

.campo-form
	border 1px solid white
	font-family 'Caviar Dreams'
	height 3em
	text-align center
	width 100%
	&:nth-child(even)
		border-top 1px solid white

.mensaje
	border none
	border-top 1px solid gris
	font-family 'Caviar Dreams'
	width 99%

.btn-enviar
	background azul
	border solid 1px #6666FF
	color white
	font-size 1.3em
	height 2.5em
	width 100%

.block-cont
	display inline-block

.formulario
	display none

.contacto
	background cafe
	color white
	font-family 'Share Tech Mono'
	font-size 1.2em
	padding-bottom 1em
	padding-top 0.2em
	text-align center

.contacto a
	color gris

.cel
	color gris

@media screen and (min-width:480px)
	header
		height 6em

@media screen and (min-width:600px)

	header
		height 7em

	h1
		font-size 2.5em
	h2
		font-size 1.5em


@media screen and (min-width:1000px)
	header
		height 10em
		text-align center

	h1
		font-size 3em

	h2
		font-size 2em

	.menu
		display none

	.logo
		display inline-block
		right 0.1em
		position absolute
		top 4em

	.txt-desc
		top 1em
		width 50%