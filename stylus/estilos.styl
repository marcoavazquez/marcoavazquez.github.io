@import "normalize.styl"
azul = #00BEFF
gris = #F9F9F9
letra = #333333

a
	color azul
	text-decoration none

body
	background gris
	font-size 16px

header
	background azul
	color white
	font-family 'Caviar Dreams'
	height 4em

h1
	margin 0px
	padding-left 1em

h2
	font-size 1em
	margin 0px
	padding-left 2em

footer
	text-align center
	font-size 0.8em

.logo
	margin 0px
	right 0.1em
	position absolute
	top 0em

.menu
	background white
	color black
	height 2.2em
	list-style none
	margin 0px
	padding 0px
	width 100%

.item
	display inline-block
	cursor pointer
	padding-top 0.4em
	text-align center
	width 48%

.social
	list-style none

.item-social
	display inline-block

.ico-social
	margin 0.4em
	margin-top 1.5em

.texto
	color letra
	margin 0.2em

.campo-form
	border 1px solid white
	font-family 'Caviar Dreams'
	height 3em
	text-align center
	width 100%
	&:nth-child(even)
		border-top 1px solid white

.mensaje
	border none
	border-top 1px solid gris
	font-family 'Caviar Dreams'
	width 99%

.btn-enviar
	background azul
	border solid 1px #6666FF
	color white
	font-size 1.3em
	height 2.5em
	width 100%

